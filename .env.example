# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/social_media_db

# Server Configuration
PORT=3001
NODE_ENV=development

# Authentication
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Nimble Streamer Configuration
NIMBLE_HOST=localhost
NIMBLE_PORT=1935
NIMBLE_STATS_PORT=8082
NIMBLE_CONFIG_PATH=/path/to/nimble/rules.conf

# Social Media Platform APIs
# X (Twitter) API
X_CLIENT_ID=your-x-client-id
X_CLIENT_SECRET=your-x-client-secret

# Mastodon API (for each instance)
MASTODON_CLIENT_ID=your-mastodon-client-id
MASTODON_CLIENT_SECRET=your-mastodon-client-secret

# Pinterest API
PINTEREST_APP_ID=your-pinterest-app-id
PINTEREST_APP_SECRET=your-pinterest-app-secret

# Bluesky API
BLUESKY_IDENTIFIER=your-bluesky-identifier
BLUESKY_PASSWORD=your-bluesky-password

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Frontend URL (for OAuth redirects)
FRONTEND_URL=http://localhost:3000

# Live Streaming Configuration
STREAMING_ENABLED=true
DEFAULT_STREAM_BITRATE=4000
DEFAULT_STREAM_RESOLUTION=1920x1080
DEFAULT_STREAM_FRAMERATE=30